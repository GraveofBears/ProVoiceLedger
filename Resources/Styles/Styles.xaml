<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 📢 Label Styles -->

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
    </Style>

    <Style x:Key="SubtitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
    </Style>

    <Style x:Key="MetadataLabel" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
    </Style>

    <!-- 🧾 Card Layout Styles -->

    <Style x:Key="SessionCard" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray950}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BorderColor" Value="{StaticResource Gray600}" />
    </Style>

    <Style x:Key="BaseFrame" TargetType="Frame">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray900}" />
    </Style>

    <Style x:Key="OverlayView" TargetType="BoxView">
        <Setter Property="Color" Value="{StaticResource Black}" />
        <Setter Property="Opacity" Value="0.5" />
    </Style>

    <!-- 🎛️ Button Styles -->

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <Style x:Key="DisabledButton" TargetType="Button">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Gray400}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Gray600}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="Padding" Value="12,8" />
    </Style>

    <!-- 🧬 Page and Layout Defaults -->

    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
        <Setter Property="Padding" Value="20,30" />
    </Style>

    <Style x:Key="ScrollPageLayout" TargetType="ScrollView">
        <Setter Property="Padding" Value="0,0,0,30" />
    </Style>

    <Style TargetType="VerticalStackLayout">
        <Setter Property="Spacing" Value="15" />
    </Style>

    <Style TargetType="HorizontalStackLayout">
        <Setter Property="Spacing" Value="10" />
    </Style>

</ResourceDictionary>
