<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProVoiceLedger.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ProVoiceLedger.Pages"
    FlyoutBehavior="Disabled"
    BackgroundColor="Black">

    <Shell.Resources>
        <!-- Optional: global styles or colors -->
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Route="main"
            Title="Dictate"
            Icon="microphone.png"
            ContentTemplate="{DataTemplate pages:RecordingPage}" />

        <ShellContent
            Route="history"
            Title="History"
            Icon="history.png"
            ContentTemplate="{DataTemplate pages:SessionHistoryPage}" />
    </TabBar>

    <!-- Hidden routes -->
    <ShellContent
        Route="splash"
        ContentTemplate="{DataTemplate pages:SplashPage}"
        IsVisible="False" />

    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        IsVisible="False" />
</Shell>
