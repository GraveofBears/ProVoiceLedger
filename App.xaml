<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="ProVoiceLedger.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <!-- App-wide colors -->
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="WindowBackgroundColor">Black</Color>

            <!-- Centralized brush (used by MAUI only) -->
            <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />

            <!-- WinUI Acrylic fallback brushes to prevent crash -->
            <SolidColorBrush x:Key="AcrylicBackgroundFillColorDefaultBrush" Color="Black" />
            <SolidColorBrush x:Key="AcrylicInAppFillColorDefaultBrush" Color="Black" />
            <SolidColorBrush x:Key="SystemControlAcrylicWindowBrush" Color="Black" />

            <!-- Label styling -->
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="Segoe UI" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>