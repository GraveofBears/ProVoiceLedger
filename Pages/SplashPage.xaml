<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProVoiceLedger.Pages.SplashPage"
             BackgroundColor="Black">
    
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#0a0a2f" Offset="0.0" />
            <!-- Deep Navy -->
            <GradientStop Color="#2a005f" Offset="0.5" />
            <!-- Dark Violet -->
            <GradientStop Color="#000020" Offset="1.0" />
            <!-- Near Black -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ðŸŒ’ Logo Image -->
        <Image x:Name="LogoImage"
               Source="logoimage_clean.png"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="160"
               HeightRequest="160"
               Grid.Row="0" />

        <!-- ðŸ”¢ App Version -->
        <Label Text="{Binding AppVersion}"
               FontSize="14"
               TextColor="AntiqueWhite"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,20"
               Grid.Row="1" />
    </Grid>
</ContentPage>
