<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProVoiceLedger.Pages.LoginPage"
             BackgroundColor="Black"
             Title="Login">
    
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#0a0a2f" Offset="0.0" />
            <!-- Deep Navy -->
            <GradientStop Color="#2a005f" Offset="0.5" />
            <!-- Dark Violet -->
            <GradientStop Color="#000020" Offset="1.0" />
            <!-- Near Black -->
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <!-- ðŸ–¼ Logo Image: synced with SplashPage for seamless transition -->
            <Image x:Name="LogoImage"
                   Source="logoimage_clean.png"
                   HeightRequest="250"
                   WidthRequest="250"
                   HorizontalOptions="Center"
                   Margin="0,-16,0,0"
                   Opacity="1" />

            <!-- ðŸ§¾ Page Title -->
            <Label Text="Sign In"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="AntiqueWhite"
                   HorizontalOptions="Center"
                   Margin="0,8,0,0"
                   SemanticProperties.HeadingLevel="Level1" />

            <!-- ðŸ‘¤ Username Label & Entry -->
            <Label Text="Username"
                   FontSize="14"
                   TextColor="AntiqueWhite"
                   Margin="0,8,0,0" />
            <Frame CornerRadius="6"
                   BorderColor="#6A00A1"
                   BackgroundColor="#0a0a2f"
                   Padding="6"
                   HasShadow="False">
                <Entry x:Name="UsernameEntry"
                       Placeholder="Enter your username"
                       BackgroundColor="Transparent"
                       TextColor="AntiqueWhite"
                       AutomationId="UsernameField" />
            </Frame>

            <!-- ðŸ”’ Password Label & Entry -->
            <Label Text="Password"
                   FontSize="14"
                   TextColor="AntiqueWhite"
                   Margin="0,12,0,0" />
            <Frame CornerRadius="6"
                   BorderColor="#6A00A1"
                   BackgroundColor="#0a0a2f"
                   Padding="6"
                   HasShadow="False">
                <Entry x:Name="PasswordEntry"
                       Placeholder="Enter your password"
                       IsPassword="True"
                       BackgroundColor="Transparent"
                       TextColor="AntiqueWhite"
                       AutomationId="PasswordField" />
            </Frame>

            <!-- ðŸš€ Login Button -->
            <Button Text="Login"
                    x:Name="LoginButton"
                    Clicked="OnLoginButtonClicked"
                    BackgroundColor="#0a0a2f"
                    TextColor="AntiqueWhite"
                    CornerRadius="12"
                    HeightRequest="46"
                    WidthRequest="180"
                    FontAttributes="Bold"
                    Margin="0,24,0,0"
                    AutomationId="LoginButton" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
