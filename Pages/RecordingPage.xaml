<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProVoiceLedger.Pages.RecordingPage"
             BackgroundColor="White"
             Padding="20">

    <VerticalStackLayout Spacing="30" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- 🎙️ Record Button -->
        <ImageButton Source="record.png"
                     WidthRequest="80"
                     HeightRequest="80"
                     BackgroundColor="Transparent"
                     Clicked="OnRecordButtonClicked"/>

        <!-- 📈 Waveform Progress -->
        <ProgressBar x:Name="WaveformBar"
                     WidthRequest="200"
                     HeightRequest="6"
                     Progress="0"
                     BackgroundColor="Transparent"
                     ProgressColor="cyan"
                     HorizontalOptions="Center" />

        <!-- ⏱️ Timestamp Label -->
        <Label x:Name="TimestampLabel"
               Text="00:00 / ∞"
               FontSize="14"
               TextColor="DarkBlue"
               HorizontalOptions="Center" />

        <!-- ▶️ Playback Controls -->
        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <ImageButton Source="rewind.png"
                         WidthRequest="50"
                         HeightRequest="50"
                         BackgroundColor="Transparent"
                         Clicked="OnRewindClicked"/>

            <ImageButton Source="play.png"
                         WidthRequest="60"
                         HeightRequest="60"
                         BackgroundColor="Transparent"
                         Clicked="OnPlayButtonClicked"/>

            <ImageButton Source="pause.png"
                         WidthRequest="50"
                         HeightRequest="50"
                         BackgroundColor="Transparent"
                         Clicked="OnPauseClicked"/>

            <ImageButton Source="fast_forward.png"
                         WidthRequest="50"
                         HeightRequest="50"
                         BackgroundColor="Transparent"
                         Clicked="OnFastForwardClicked"/>
        </HorizontalStackLayout>

        <!-- 🛑 Stop Button -->
        <ImageButton Source="finish.png"
                     WidthRequest="60"
                     HeightRequest="60"
                     BackgroundColor="Transparent"
                     Clicked="OnStopButtonClicked"/>

        <!-- ⚙️ Settings -->
        <ImageButton Source="settings.png"
                     WidthRequest="40"
                     HeightRequest="40"
                     BackgroundColor="Transparent"
                     Clicked="OnSettingsClicked"
                     HorizontalOptions="End" />

    </VerticalStackLayout>
</ContentPage>
