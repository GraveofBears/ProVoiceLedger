<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProVoiceLedger.Pages.RecordingPage"
             BackgroundColor="White"
             Padding="20">

    <VerticalStackLayout Spacing="30" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- 🎙️ Record Button -->
        <ImageButton Source="record.png"
                     WidthRequest="100"
                     HeightRequest="100"
                     BackgroundColor="Transparent"
                     Clicked="OnRecordButtonClicked"/>

        <!-- 📈 Waveform Progress -->
        <ProgressBar x:Name="WaveformBar"
                     WidthRequest="200"
                     HeightRequest="6"
                     Progress="0"
                     BackgroundColor="Transparent"
                     ProgressColor="OrangeRed"
                     HorizontalOptions="Center" />

        <!-- ⏱️ Timestamp Label -->
        <Label x:Name="TimestampLabel"
               Text="00:00 / ∞"
               FontSize="14"
               TextColor="DarkBlue"
               HorizontalOptions="Center" />

        <!-- ▶️ Playback Controls -->
        <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">

            <ImageButton Source="seekstart.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnSeekStartClicked"/>

            <ImageButton Source="rewind.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnRewindClicked"/>

            <ImageButton x:Name="PlayPauseButton"
                         Source="play.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnPlayPauseClicked"/>

            <ImageButton Source="stop.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnStopButtonClicked"/>

            <ImageButton Source="fastforward.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnFastForwardClicked"/>

            <ImageButton Source="seekend.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="OnSeekEndClicked"/>

        </HorizontalStackLayout>

        <!-- ✅ Finish Button -->
        <ImageButton Source="finish.png"
                     WidthRequest="60"
                     HeightRequest="60"
                     BackgroundColor="Transparent"
                     Clicked="OnFinishButtonClicked"
                     HorizontalOptions="Center" />

        <!-- ⚙️ Settings -->
        <ImageButton Source="settings.png"
                     WidthRequest="40"
                     HeightRequest="40"
                     BackgroundColor="Transparent"
                     Clicked="OnSettingsClicked"
                     HorizontalOptions="End" />

    </VerticalStackLayout>
</ContentPage>
