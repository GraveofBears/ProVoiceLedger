<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProVoiceLedger.Pages.RecordingListPage"
             BackgroundColor="Black"
             Title="Recordings">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#0a0a2f" Offset="0.0" />
            <GradientStop Color="#2a005f" Offset="0.5" />
            <GradientStop Color="#000020" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowSpacing="0" ColumnSpacing="0" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- ðŸ§­ Header -->
        <Label Text="Your Recordings"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="AntiqueWhite"
               HorizontalOptions="Center"
               Margin="0,20,0,10"
               Grid.Row="0" />

        <!-- ðŸ“œ List of Recordings -->
        <CollectionView x:Name="RecordingsView"
                        SelectionMode="None"
                        Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12"
                           Margin="0,6"
                           BackgroundColor="Transparent"
                           HasShadow="False"
                           CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- ðŸŽ™ï¸ Clip Info -->
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="AntiqueWhite" />
                                <Label Text="{Binding Timestamp}"
                                       FontSize="14"
                                       TextColor="AntiqueWhite" />
                            </VerticalStackLayout>

                            <!-- ðŸ› ï¸ Action Buttons -->
                            <HorizontalStackLayout Grid.Column="1"
                                                   Spacing="8"
                                                   VerticalOptions="Center">
                                <ImageButton Source="edit.png"
                                             WidthRequest="28"
                                             HeightRequest="28"
                                             BackgroundColor="Transparent"
                                             CommandParameter="{Binding .}"
                                             Clicked="OnEditClicked" />
                                <ImageButton Source="send.png"
                                             WidthRequest="28"
                                             HeightRequest="28"
                                             BackgroundColor="Transparent"
                                             CommandParameter="{Binding .}"
                                             Clicked="OnSendClicked" />
                                <ImageButton Source="pen.png"
                                             WidthRequest="28"
                                             HeightRequest="28"
                                             BackgroundColor="Transparent"
                                             CommandParameter="{Binding .}"
                                             Clicked="OnRenameClicked" />
                            </HorizontalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
