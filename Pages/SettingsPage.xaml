<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProVoiceLedger.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Settings"
    BackgroundColor="Black">

    <ContentPage.Background>
        <LinearGradientBrush EndPoint="1,1">
            <GradientStop Color="#0a0a2f" Offset="0.0" />
            <!-- Deep Navy -->
            <GradientStop Color="#2a005f" Offset="0.5" />
            <!-- Dark Violet -->
            <GradientStop Color="#000020" Offset="1.0" />
            <!-- Near Black -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <VerticalStackLayout Padding="24" Spacing="20">

		<!-- ðŸ§­ Header -->
		<Label Text="Settings"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="AntiqueWhite"
               HorizontalOptions="Center" />

		<!-- ðŸ”“ Logout Button -->
		<Button Text="Log Out"
                Clicked="OnLogoutClicked"
                BackgroundColor="#2a005f"
                TextColor="White"
                CornerRadius="8"
                FontAttributes="Bold"
                HeightRequest="48"
                WidthRequest="180"               
                HorizontalOptions="Fill" />

		<!-- ðŸ“¦ App Version Display -->
		<Label Text="{Binding AppVersion}"
               FontSize="14"
               TextColor="AntiqueWhite"
               HorizontalOptions="Center" />

		<!-- ðŸ§ª Optional: Add more settings here -->
		<!-- Toggle for dark mode, audio format, ghost mode, etc. -->

	</VerticalStackLayout>
</ContentPage>
